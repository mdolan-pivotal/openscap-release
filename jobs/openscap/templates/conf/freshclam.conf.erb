# Automatically created by the clamav-freshclam postinst
# Comments will get lost when you reconfigure the clamav-freshclam package

DatabaseOwner root
UpdateLogFile /var/vcap/sys/log/clamav/freshclam.log
LogVerbose false
LogSyslog true
LogFacility LOG_LOCAL6
LogFileMaxSize 0
LogTime true
Foreground false
Debug false
MaxAttempts 5
DatabaseDirectory /var/lib/clamav
#DNSDatabaseInfo current.cvd.clamav.net
NotifyClamd /var/vcap/packages/clamav/etc/clamd.conf
AllowSupplementaryGroups false
PidFile /var/vcap/sys/run/clamav/freshclam.pid
ConnectTimeout 30
ReceiveTimeout 30
TestDatabases yes
#ScriptedUpdates off
CompressLocalDatabase no
Bytecode true
# Check for new database 24 times a day
Checks 24
DatabaseMirror <%= properties.clamav.dbMirror1 %>
<% if defined? properties.clamav.dbMirror2 %>
DatabaseMirror <%= properties.clamav.dbMirror2 %>
<% end %>
<% if properties.clamav.useProxy %>
HTTPProxyServer <%= properties.clamav.proxyHost %>
HTTPProxyPort <%= properties.clamav.proxyPort %>
<% end %>
